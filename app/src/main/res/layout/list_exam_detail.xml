<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:paddingBottom="30dp"
        android:background="@drawable/shape_product_checkout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NCC MINI EXAM"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/light_vilate"
            android:layout_gravity="center"
            android:id="@+id/text_mimi_exam"
            />
        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:background="@color/Vilate"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            />

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/Vilate"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Certificate :"
                android:id="@+id/text_cert"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/Vilate"/>


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ac"
            android:id="@+id/text_certificate"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/Vilate"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/Vilate"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="75dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Questions - "
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/Vilate"
                android:id="@+id/total_quest"/>


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
                android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/Vilate"
            android:id="@+id/total_questions"/>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="75dp"
            android:background="@color/Vilate"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_phone"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2hr 30 minutes "
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:id="@+id/text_exam_timing"
                android:textColor="@color/Vilate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":Timings  "
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:id="@+id/text_timing"
                android:textColor="@color/Vilate"/>


        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="2dp"
            android:background="@color/Vilate"
            />


        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/btn_start"
            android:background="@drawable/shape_product2"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="See Result"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/btn_seeresult"
            android:background="@drawable/shape_product2"/>

    </LinearLayout>


</LinearLayout>
