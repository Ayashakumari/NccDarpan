<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/app_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />


        <FrameLayout
            android:id="@+id/content_frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F8FB"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fitsSystemWindows="false"
            android:orientation="vertical">

            <include
                layout="@layout/header"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:background="@color/back"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="HOME"
                    android:textColor="@color/Vilate"
                    android:textSize="14dp" />

            </LinearLayout>

            <include
                android:id="@+id/item1"
                layout="@layout/textview_layout_sub" />


            <include
                android:id="@+id/item2"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item3"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item4"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item5"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item6"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item7"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item8"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item9"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item10"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item11"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item12"
                layout="@layout/textview_layout_sub" />

            <include
                android:id="@+id/item13"
                layout="@layout/textview_layout_sub" />

            <include layout="@layout/footer" />

        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>
