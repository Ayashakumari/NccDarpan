<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.tsa.nccapp.RegisterActivity">


    <LinearLayout
        style="@style/VerticalWeight"
        android:layout_weight=".75"
        android:orientation="vertical"
        android:weightSum="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/VerticalWeight"
                            android:layout_gravity="center"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:orientation="vertical">



                            <EditText
                                android:id="@+id/full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/person"
                                android:drawablePadding="5dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:hint="Full Name"
                                android:inputType="text"
                                android:textSize="12sp"
                                android:maxLines="1"
                                android:background="@drawable/shape_white"
                                android:nextFocusLeft="@id/full_name"
                                android:nextFocusUp="@id/full_name"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />



                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >



                                <EditText
                                    android:id="@+id/user_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890."
                                    android:drawableLeft="@drawable/person"
                                    android:drawablePadding="5dp"
                                    android:paddingTop="5dp"
                                    android:textSize="12sp"
                                    android:layout_gravity="center_vertical"
                                    android:hint="User Name"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/shape_white"
                                    android:imeActionId="6"
                                    android:paddingBottom="5dp"
                                    android:imeOptions="actionUnspecified"
                                    android:inputType="textFilter"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true"
                                    />



                                <TextView
                                    android:id="@+id/user_validation_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>



                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/email_20dp"
                                android:drawablePadding="5dp"
                                android:layout_gravity="center_vertical"
                                android:hint="Enter Email"
                                android:paddingBottom="5dp"
                                android:textSize="12sp"
                                android:imeActionId="6"
                                android:paddingTop="5dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/shape_white"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />





                            <EditText
                                android:id="@+id/mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/phone"
                                android:drawablePadding="5dp"
                                android:hint="Enter Phone Number"
                                android:imeActionId="6"
                                android:textSize="12sp"
                                android:layout_marginTop="7dp"
                                android:layout_gravity="center_vertical"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="number"
                                android:paddingTop="5dp"
                                android:maxLength="10"
                                android:paddingBottom="5dp"
                                android:background="@drawable/shape_white"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />

                            <TextView
                                android:background="@drawable/shape_white"
                                android:id="@+id/category"
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/_30sdp"
                                android:textSize="12sp"

                                android:hint="Select Category"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/eye_20"
                                android:editable="false"
                                android:textAlignment="gravity"
                                android:layout_weight=".9"/>




                            <EditText
                                android:id="@+id/directorate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_wb_incandescent"
                                android:drawablePadding="5dp"
                                android:hint="Directorate Name"
                                android:inputType="text"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/shape_white"
                                android:maxLines="1"
                                android:textSize="12sp"

                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:nextFocusLeft="@id/password"
                                android:nextFocusUp="@id/password"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />




                            <EditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/pass_20"
                                android:drawablePadding="5dp"
                                android:hint="Password"
                                android:layout_gravity="center_vertical"
                                android:imeActionId="6"
                                android:textSize="12sp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/shape_white"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />




                            <EditText
                                android:id="@+id/confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/pass_20"
                                android:drawablePadding="5dp"
                                android:hint="Confirm Password"
                                android:imeActionId="6"
                                android:paddingTop="5dp"
                                android:textSize="12sp"

                                android:paddingBottom="5dp"
                                android:layout_gravity="center_vertical"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:layout_marginTop="7dp"
                                android:maxLines="1"
                                android:background="@drawable/shape_white"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />



                            <LinearLayout
                                android:id="@+id/dob_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_white"
                                android:weightSum="1.0">

                                <ImageView
                                    android:id="@+id/dob_iv"
                                    style="@style/HorizontalWeight"
                                    android:layout_weight=".1"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/date" />

                                <TextView
                                    android:id="@+id/dob_tv"
                                    android:textSize="12sp"
                                    style="@style/HorizontalWeight"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:hint="Select Date of Birth"
                                    android:textAlignment="gravity"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text="Female" />
                    </RadioGroup>


                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="1.0">

                        <ImageView
                            style="@style/HorizontalWeight"
                            android:layout_weight=".1"
                            android:padding="5dp"
                            app:srcCompat="@drawable/location_icon" />

                        <TextView
                            android:id="@+id/location_tv"
                            style="@style/HorizontalWeight"
                            android:layout_marginLeft="15dp"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_white"
                            android:hint="Click To Fill Address"
                            android:textAlignment="gravity"
                            android:paddingLeft="7dp"
                            android:paddingBottom="8dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>;

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        style="@style/VerticalWeight"
        android:layout_weight=".15"
        android:orientation="horizontal"
        android:id="@+id/bottom1"
        android:weightSum="1.0">

        <Button
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="50dp"
            android:layout_weight=".5"
            android:background="@drawable/rounded_corner_button"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        style="@style/VerticalWeight"
        android:layout_weight=".1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:id="@+id/bottom2"
        android:weightSum="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goLogin"
            android:text="Allready HAVE AN ACCOUNT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>

