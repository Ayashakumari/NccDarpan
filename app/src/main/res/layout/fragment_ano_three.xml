<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/header_include">

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/number"
                        android:layout_weight="1"
                        android:background="@drawable/shape_white"
                        android:hint="Name"
                        android:inputType="text"
                        android:id="@+id/ano_name"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:paddingTop="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/phone"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:id="@+id/ano_mobile"
                        />



                    <EditText
                        android:id="@+id/ano_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white"
                        android:drawableLeft="@drawable/email_20dp"
                        android:drawablePadding="5dp"
                        android:hint="Your Email"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="14sp" />

                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:background="@drawable/shape_white"-->
                        <!--android:drawableLeft="@drawable/ic_action_institute"-->
                        <!--android:textColor="@color/gray"-->
                        <!--android:text="Institute Year"-->
                        <!--android:drawablePadding="5dp"-->
                        <!--android:paddingLeft="10dp"-->
                        <!--android:drawableRight="@drawable/ic_action_arrow"-->
                        <!--android:textSize="14sp"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:paddingBottom="5dp"-->
                        <!--android:id="@+id/Ano_Institute_year"-->
                        <!--/>-->



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--<TextView-->

                        <!--android:layout_width="155dp"-->
                        <!--android:layout_height="43dp"-->
                        <!--android:paddingTop="5dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_alignParentStart="true"-->
                        <!--android:layout_alignParentTop="true"-->
                        <!--android:background="@drawable/shape_white"-->
                        <!--android:drawableLeft="@drawable/location"-->
                        <!--android:gravity="center"-->
                        <!--android:paddingBottom="5dp"-->
                        <!--android:paddingRight="8dp"-->
                        <!--android:text="State"-->
                        <!--android:textAlignment="center"-->
                        <!--android:textColor="@color/gray"-->
                        <!--android:textSize="10sp" />-->


                        <Spinner
                            style="@style/my_spinner"
                            android:id="@+id/state_ano"
                            android:entries="@array/state"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp">
                        </Spinner>

                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/district_ano"
                        style="@style/my_spinner"
                        android:layout_marginTop="14dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:entries="@array/District"
                        android:paddingLeft="20dp" />


                    <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp" -->
                    <!--android:src="@drawable/arrow_right"-->
                    <!--<!-/>&ndash;&gt;-->


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white"
                        android:hint="Unit"
                        android:inputType="text"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/unit"
                        android:textSize="14sp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/ano_unit"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white"
                        android:hint="Group"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/unit"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"

                        android:id="@+id/ano_group"
                        android:drawablePadding="5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white"
                        android:hint="Directorate"
                        android:inputType="text"
                        android:paddingTop="5dp"
                        android:drawablePadding="5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/ic_wb_incandescent"
                        android:id="@+id/ano_directorate"
                        android:textSize="14sp"
                        />



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:paddingBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/btn_register_ano"
                        android:background="@drawable/rounded_corner_button"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>