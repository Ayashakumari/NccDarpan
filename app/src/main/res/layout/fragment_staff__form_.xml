<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tsa.nccapp.fragment.Staff_Form_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/header_include">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/number"
                        android:layout_weight="1"
                        android:background="@drawable/shape_white"
                        android:layout_marginTop="10dp"
                        android:hint="Name"
                        android:inputType="text"
                        android:id="@+id/staff_name"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/staff_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white"
                        android:drawableLeft="@drawable/email_20dp"
                        android:drawablePadding="5dp"
                        android:hint="Your Email"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="14sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:paddingTop="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/phone"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:id="@+id/staff_mobile"
                        />





                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:background="@drawable/shape_white"-->
                        <!--android:drawableLeft="@drawable/ic_action_institute"-->
                        <!--android:textColor="@color/gray"-->
                        <!--android:text="Institute Year"-->
                        <!--android:drawablePadding="5dp"-->
                        <!--android:paddingLeft="10dp"-->
                        <!--android:drawableRight="@drawable/ic_action_arrow"-->
                        <!--android:textSize="14sp"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:paddingBottom="5dp"-->
                        <!--android:id="@+id/staff_Institute_year"-->
                        <!--/>-->



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="20dp"
                           android:layout_marginTop="10dp"
                           android:layout_alignParentRight="true"
                           app:srcCompat="@drawable/ic_arrow_up_white"
                            />
                        <Spinner
                            style="@style/my_spinner"
                            android:id="@+id/state_staff"
                            android:entries="@array/state"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp">
                        </Spinner>

                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/district_staff"
                        style="@style/my_spinner"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:entries="@array/District"
                        android:paddingLeft="20dp" />


                    <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp" -->
                    <!--android:src="@drawable/arrow_right"-->
                    <!--<!-/>&ndash;&gt;-->


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white"
                        android:hint="Unit"
                        android:inputType="text"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/unit"
                        android:textSize="14sp"
                        android:paddingLeft="10dp"

                        android:gravity="center_vertical"
                        android:id="@+id/staff_unit"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white"
                        android:hint="Group"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/unit"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"

                        android:id="@+id/staff_group"
                        android:drawablePadding="5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white"
                        android:hint="Directorate"
                        android:inputType="text"
                        android:paddingTop="5dp"
                        android:drawablePadding="5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/ic_wb_incandescent"
                        android:id="@+id/staff_directorate"
                        android:textSize="14sp"
                        />



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register "
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:id="@+id/btn_register_staff"
                        android:background="@drawable/rounded_corner_button"/>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>